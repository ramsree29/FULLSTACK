Task 7: Simulate an attendance tracker interface that marks students present or absent dynamically.

import { useState } from "react";
import "./App.css";


const studentsList = [
  "Arun",
  "Bala",
  "Charan",
  "Divya",
  "Karthik",
];


function App() {
  const [attendance, setAttendance] = useState(
    studentsList.map((name) => ({
      name,
      status: "Not Marked",
    }))
  );


  const markAttendance = (index, status) => {
    const updated = [...attendance];
    updated[index].status = status;
    setAttendance(updated);
  };


  return (
    <div className="container">
      <div className="attendance-box">
        <h2>ðŸ“˜ Attendance Tracker</h2>


        {attendance.map((student, index) => (
          <div key={index} className="student-row">
            <span>{student.name}</span>


            <div className="buttons">
              <button
                className="present"
                onClick={() => markAttendance(index, "Present")}
              >
                Present
              </button>


              <button
                className="absent"
                onClick={() => markAttendance(index, "Absent")}
              >
                Absent
              </button>
            </div>


            <span
              className={`status ${
                student.status === "Present"
                  ? "green"
                  : student.status === "Absent"
                  ? "red"
                  : ""
              }`}
            >
              {student.status}
            </span>
          </div>
        ))}
      </div>
    </div>
  );
}


export default App;




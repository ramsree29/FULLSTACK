Task 18: Simulate a notification system for a dashboard application.


import React, { useState } from "react";
import "./App.css";
function App() {
  const [notifications, setNotifications] = useState([]);
  const [input, setInput] = useState("");
  const addNotification = () => {
    if (input.trim() !== "") {
      setNotifications([{ message: input, time: new Date().toLocaleTimeString() }, ...notifications]);
      setInput("");
    }
  };
  const clearNotifications = () => {
    setNotifications([]);
  };
  return (
    <div className="container">
      <h1>Dashboard Notification System</h1>
      <div className="notification-input">
        <input
          type="text"
          placeholder="Write a notification..."
          value={input}
          onChange={(e) => setInput(e.target.value)}
        />
        <button onClick={addNotification}>Add</button>
        <button onClick={clearNotifications}>Clear All</button>
      </div>
      <div className="notification-list">
        <h2>Notifications ({notifications.length})</h2>
        {notifications.length === 0 ? (
          <p>No notifications yet.</p>
        ) : (
          <ul>
            {notifications.map((notif, index) => (
              <li key={index}>
                {notif.message} <span className="time">{notif.time}</span>
              </li>
            ))}
          </ul>
        )}
      </div>
    </div>
  );
}
export default App;

App.css

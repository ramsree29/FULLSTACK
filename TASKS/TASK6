Task 6: Implement a simple course enrollment form that updates the enrolled course list in real time.

import { useState } from "react";
import "./App.css";


const courseList = [
  "React Basics",
  "JavaScript Fundamentals",
  "Web Development",
  "Python Programming",
  "Data Structures",
];


function App() {
  const [studentName, setStudentName] = useState("");
  const [course, setCourse] = useState("");
  const [enrollments, setEnrollments] = useState([]);


  const handleEnroll = (e) => {
    e.preventDefault();


    if (!studentName || !course) return;


    const newEnrollment = {
      name: studentName,
      course,
    };


    setEnrollments([...enrollments, newEnrollment]);
    setStudentName("");
    setCourse("");
  };


  return (
    <div className="container">
      <div className="enroll-box">
        <h2>ðŸŽ“ Course Enrollment</h2>


        <form onSubmit={handleEnroll}>
          <input
            type="text"
            placeholder="Student Name"
            value={studentName}
            onChange={(e) => setStudentName(e.target.value)}
          />


          <select
            value={course}
            onChange={(e) => setCourse(e.target.value)}
          >
            <option value="">Select Course</option>
            {courseList.map((c, index) => (
              <option key={index} value={c}>
                {c}
              </option>
            ))}
          </select>


          <button type="submit">Enroll</button>
        </form>


        <div className="enrolled-list">
          <h3>ðŸ“‹ Enrolled Students</h3>


          {enrollments.length === 0 && (
            <p className="empty">No enrollments yet</p>
          )}


          {enrollments.map((item, index) => (
            <div key={index} className="enroll-item">
              <span>{item.name}</span>
              <span>{item.course}</span>
            </div>
          ))}
        </div>
      </div>
    </div>
  );
}


export default App;



App.css
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
  font-family: Arial, sans-serif;
}


.container {
  min-height: 100vh;

Task 4: Implement a real-time polling system for classroom use.

import { useState } from "react";
import "./App.css";


function App() {
  const [votes, setVotes] = useState({
    React: 0,
    Angular: 0,
    Vue: 0,
    Svelte: 0,
  });


  const totalVotes =
    votes.React + votes.Angular + votes.Vue + votes.Svelte;


  const vote = (option) => {
    setVotes({ ...votes, [option]: votes[option] + 1 });
  };


  const getPercentage = (count) => {
    if (totalVotes === 0) return 0;
    return ((count / totalVotes) * 100).toFixed(1);
  };


  return (
    <div className="container">
      <div className="poll-box">
        <h2>ðŸ“Š Classroom Poll</h2>
        <p>Which Frontend Framework do you like?</p>


        {Object.keys(votes).map((option) => (
          <div key={option} className="option">
            <button onClick={() => vote(option)}>{option}</button>
            <span>
              {votes[option]} votes ({getPercentage(votes[option])}%)
            </span>
          </div>
        ))}


        <h4>Total Votes: {totalVotes}</h4>
      </div>
    </div>
  );
}


export default App;



